{
	"name": "connected-repo",
	"version": "1.0.0",
	"description": "Starter Monorepo using Turbo of Nodejs + Fastify + OrchidORM + tRPC + Reactjs with opentelemetry setup",
	"repository": "git@github.com:teziapp/connected-repo-starter.git",
	"author": "Balkrishna Agarwal <krishna@teziapp.com>",
	"license": "AGPL-3.0-only",
	"private": true,
	"scripts": {
		"env:sync": "node scripts/sync-env.js",
		"build": "yarn env:sync && turbo run build",
		"clean": "turbo run clean && rm -rf node_modules && rm -rf .yarn/cache && yarn cache clean",
		"db": "turbo db --",
		"dev": "yarn env:sync && turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"dependencies": {
		"@trpc/server": "^11.6.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"prettier": "^3.5.3",
		"turbo": "^2.5.8",
		"typescript": "5.9.3",
    "tsup": "^8.3.5"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "yarn@1.22.22",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
