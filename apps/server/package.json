{
	"name": "@connected-repo/server",
	"version": "1.0.0",
	"main": "server.ts",
	"description": "Starter Monorepo using Turbo of Nodejs + Fastify + OrchidORM + tRPC + Reactjs with opentelemetry setup",
	"repository": "git@github.com:teziapp/connected-repo-starter.git",
	"author": "Balkrishna Agarwal <krishna@teziapp.com>",
	"license": "AGPL-3.0-only",
	"private": true,
	"scripts": {
		"clean": "rm -rf node_modules && rm -rf dist",
		"db": "ts-node src/db/db_script.ts",
		"dev": "npx ts-node-dev --respawn --transpile-only --loader ts-node/esm src/server.ts",
		"build": "rimraf dist && swc src -d dist --copy-files --config-file=swc.config.json",
		"start": "node dist/src/server.js"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"@fastify/helmet": "^13.0.2",
		"fastify": "^5.6.1",
		"orchid-orm": "^1.57.6",
		"rate-limiter-flexible": "^8.1.0"
	},
	"devDependencies": {
		"@connected-repo/typescript-config": "*",
		"@connected-repo/zod-schemas": "*",
		"@types/node": "^22.18.12",
		"@types/pg": "^8.15.5",
		"dotenv": "^17.2.3",
		"pino-pretty": "^13.1.2",
		"rimraf": "^6.0.1",
		"pg": "^8.16.3",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0"
	}
}
