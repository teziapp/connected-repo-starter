{
  "name": "@connected-repo/zod-schemas",
  "version": "1.0.0",
  "description": "Common Zod Schemas to be used everywhere",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "git@github.com:teziapp/connected-repo-starter.git",
  "author": "Balkrishna Agarwal",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf node_modules && rm -rf dist",
    "format": "biome format . --write",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@connected-repo/typescript-config": "*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./node-env": {
      "types": "./dist/node_env.d.ts",
      "import": "./dist/node_env.js",
      "require": "./dist/node_env.js"
    },
    "./enums": {
      "types": "./dist/enums.d.ts",
      "import": "./dist/enums.js",
      "require": "./dist/enums.js"
    },
    "./zod-utils": {
      "types": "./dist/zod_utils.d.ts",
      "import": "./dist/zod_utils.js",
      "require": "./dist/zod_utils.js"
    }
  }
}
