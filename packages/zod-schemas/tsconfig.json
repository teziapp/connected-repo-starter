{
	"extends": "@connected-repo/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"emitDeclarationOnly": false,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@zod-schemas/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
